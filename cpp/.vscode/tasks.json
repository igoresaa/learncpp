{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build project",
      "type": "shell",
      "options": {
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c"]
        }
      },
      "command": "mkdir -p build && cd \"${workspaceFolder}\" && g++ -g -I\"${workspaceFolder}\" $(find . -name '*.cpp') -std=c++20 -O2 -o build/build_${workspaceFolderBasename}",
      "problemMatcher": ["$gcc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
